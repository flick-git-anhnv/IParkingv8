            }
        }

        /// <summary>
        /// Xoá nhiều folder được tạo trong khoảng từ Fromdate đến Todate
        /// </summary>
        /// <param name="ParentFolderPath">Đường dẫn đến nới chứa các folder</param>
        /// <param name="FromDate">Ngày tạo từ</param>
        /// <param name="ToDate">đến ngày</param>
        /// <returns></returns>
        public static void DeleteFoldersByCreatedTime(string ParentFolderPath, DateTime FromDate, DateTime ToDate)
        {
            Task.Run(() =>
            {
                try
                {
                    if (Directory.Exists(ParentFolderPath))
                    {
                        var Folders = Directory.GetDirectories(ParentFolderPath);
                        foreach (var item in Folders)
                        {
                            if (Directory.Exists(item))
                            {
                                var CreatedDate = Directory.GetCreationTime(item);
                                if (CreatedDate <= ToDate && CreatedDate >= FromDate)
                                {
                                    Directory.Delete(item, true);
                                }
                            }
                        }
                    }
                }
                catch (Exception ex)
                {
                    LogHelperv2.Logger_SystemError($"Delete Folders By CreatedTime occured  an exception: {ex.Message}", Application.StartupPath);
                    throw;
                }
            });
        }

