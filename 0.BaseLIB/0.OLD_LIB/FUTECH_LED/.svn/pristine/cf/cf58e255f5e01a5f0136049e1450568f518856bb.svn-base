using System;
using System.Collections.Generic;
using System.Text;

namespace Futech.Objects
{
    public class SpecialHoliday
    {
        // Constructor
        public SpecialHoliday()
        {
 
        }

        private int day = 1;
        public int Day
        {
            get { return day; }
            set { day = value; }
        }

        private int month = 1;
        public int Month
        {
            get { return month; }
            set { month = value; }
        }

        private int year = 2008;
        public int Year
        {
            get { return year; }
            set { year = value; }
        }

        private bool isEveryYear = true;
        public bool IsEveryYear
        {
            get { return isEveryYear; }
            set { isEveryYear = value; }
        }

        private string description = "";
        public string Description
        {
            get { return description; }
            set { description = value; }
        }
    }
}
