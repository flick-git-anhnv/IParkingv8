using System;
using System.Collections.Generic;
using System.Text;

namespace Futech.DisplayLED
{
    public interface IDisplayLED
    {
        int CommunicationType { get; set; }
        int Address { get; set; }
        int RowNumber { get; set; }
        bool Connect(string comport, int baudrate);
        /// <summary>
        /// Display Led. 
        /// </summary>
        /// <param name="dtimein">time in. Set as String.empty to show custom script (kztekLED only)</param>
        /// <param name="dtimeout">time out. Set as String.empty to show custom script (kztekLED only)</param>
        /// <param name="plate"></param>
        /// <param name="money"></param>
        /// <param name="cardtype"></param>
        /// <param name="cardstate">Custom scripts. line separate by '\n' (kztekLED only)</param>
        void SendToLED(string dtimein, string dtimeout, string plate, string money, int cardtype, string cardstate);
        void SetParkingSlot(int slotNo, byte arrow, byte color);
        void Close();

    }

    public class InterfaceFactory
    {
        public static IDisplayLED CreateDisplay(string name)
        {
            switch (name)
            {
                case "DSP840":
                    return new DSP840();
                case "FAT810":
                    return new FAT810();
                case "FUTECH":
                    return new FUTECH();
                case "FUTECH2":
                    return new FUTECH2();
                case "FUTECH2LINE":
                    return new FUTECH2LINE();
                case "PGS_LED":
                    return new KztekLED("LedMatrix V11.2 UDP");
                case "ATPRO":
                    return new ATPRO(); 
                case "P10_RED":
                    return new KztekLED("P10_RED");
                case "P10_Fullcolor":
                    return new KztekLED("P10_Fullcolor");
                case "P7_62_RGY":
                    return new KztekLED("P7_62_RGY");
                case "KPS_001":
                    return new KPS_001();
                default:
                    break;
            }
            return null;
        }
    }
}
